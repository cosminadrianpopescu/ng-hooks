{
    "name": "ng-hooks",
    "version": "1.0.0",
    "description": "Replace angular lifecycle hooks with nicer annotations",
    "main": "./ts/index.js",
    "module": "./ts/index.mjs",
    "exports": {
        ".": {
            "import": "./ts/index.js",
            "require": "./ts/index.js",
            "types": "./ts/index.d.ts"
        }
    },
    "type": "module",
    "scripts": {
