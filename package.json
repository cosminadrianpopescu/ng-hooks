    "devDependencies": {
        "@types/jasmine": "^5.1.4",
        "jasmine": "^5.1.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1"
    }
